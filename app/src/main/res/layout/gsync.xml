    <ScrollView android:layout_height="300dp"
        android:layout_width="match_parent">
		<TextView 
		    android:layout_width="match_parent"
		    android:layout_height="300dp"
		    android:textSize="12sp"
		    android:id="@+id/itemstatus"
		    />
	</ScrollView>
	-->
</LinearLayout>
